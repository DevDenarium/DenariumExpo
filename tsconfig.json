{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "jsx": "react-native",
    "lib": ["esnext"],
    "module": "es2015", // 'bundler' only works with 'preserve' or 'es2015' or later
    "moduleResolution": "node",
    "noEmit": true,
    "skipLibCheck": true,
    "strict": true,
    "target": "esnext",
    "baseUrl": ".",
    "paths": {
      "@env": ["node_modules/react-native-dotenv"]
    }
  },
  "exclude": ["node_modules"],
  "extends": "expo/tsconfig.base"
}